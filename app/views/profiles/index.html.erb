<p>Google Map</p>

<p>日本の緯度: <%= Place.find(87).latitude %> 経度:<%= Place.find(87).longitude %></p>
<div id="map"></div>

  <script>
    function initMap() {
      var place1 = { lat: <%= Place.find(87).latitude %>, lng: <%= Place.find(87).longitude %> };
      // var place2 = { lat: <%= Place.find(62).latitude %>, lng: <%= Place.find(62).longitude %> };
      var map = new google.maps.Map(document.getElementById("map"), {
        center: place1,
        zoom: 2,
      });

       //positionに指定した座標にピンを表示
      var name1 = 'Place：<%= Place.find(87).name_jp %>';
      // var name2 = 'Place：<%= Place.find(62).name_jp %>';
      var marker = new google.maps.Marker({
                    position: place1,
                    map: map,
                    title: name1
      });
      // var marker = new google.maps.Marker({
      //               position: place2,
      //               map: map,
      //               title: name2
      // });

      var contentString = 'おいしいものいっぱい';
      var infowindow = new google.maps.InfoWindow({
          content: `<h1>${name1}</h1>` + contentString
      });

       marker.addListener("click", () => {
        infowindow.open({
          anchor: marker,
          map,
          shouldFocus: false,
        });
      });

       infoWindow.addListener('closeclick', ()=>{
        // Handle focus manually.
      });
    } 
  </script>

